{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd subscription-manager/backend && npm install",
    "watchPatterns": [
      "subscription-manager/backend/**"
    ]
  },
  "deploy": {
    "startCommand": "cd subscription-manager/backend && npm start",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}